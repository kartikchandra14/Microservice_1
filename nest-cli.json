{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/shop-monorepo/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/shop-monorepo/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/shop-monorepo",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "order-svc": {
      "type": "application",
      "root": "apps/order-svc",
      "entryFile": "main",
      "sourceRoot": "apps/order-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order-svc/tsconfig.app.json"
      }
    },
    "product-svc": {
      "type": "application",
      "root": "apps/product-svc",
      "entryFile": "main",
      "sourceRoot": "apps/product-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product-svc/tsconfig.app.json"
      }
    },
    "proto": {
      "type": "library",
      "root": "libs/proto",
      "entryFile": "index",
      "sourceRoot": "libs/proto/src",
      "compilerOptions": {
        "tsConfigPath": "libs/proto/tsconfig.lib.json"
      }
    },
    "shop-monorepo": {
      "type": "application",
      "root": "apps/shop-monorepo",
      "entryFile": "main",
      "sourceRoot": "apps/shop-monorepo/src",
      "compilerOptions": {
        "tsConfigPath": "apps/shop-monorepo/tsconfig.app.json"
      }
    },
    "user-svc": {
      "type": "application",
      "root": "apps/user-svc",
      "entryFile": "main",
      "sourceRoot": "apps/user-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-svc/tsconfig.app.json"
      }
    }
  }
}